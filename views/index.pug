extends layout

block content
  link(rel='stylesheet', href='/stylesheets/homepage.css')
  script
    include ../routes/index.js
  h2= title
  p Art of Leadership is a platform for Coaches and Executives to achieve their leadership goals. Through an interactive site, coaches and executives can track progress on individual goals and access all completed milestones. What are your aspirations for your leadership development? Let Art of Leadership guide you.
  br
  div.row
    div.col
    div.col-md-4.jumbotron
      div.row
        div.col-md-2
        h4.loginLabel(style="margin-left:0px") LOG IN OR &nbsp
        //a(class='button btn btn-primary btn-sm' href='coachSignup' role='button' style="margin-left:60px, margin-top:1px").signUp_button Sign Up
        div.col-md-3
        br
      div.row
        div.col-md-2
        div.col
          form(method='POST' action='/coachView' id="loginForm")
            div.form-group
              input.input-small#username2.form-control(type='text', name='username', placeholder="Email", style="text-align: left" required)
            div.form-group
              input.input-small#password2.form-control(type='password', name='password', placeholder="Password", style="text-align: left" required)
            h6(style="color: red; text-align: left") #{message}
            div.row
              div.col-md-5
              button.btn.btn-primary.btn-sm(type='submit' style="position: absolute; left: 20px") Sign In
              p#loginPrompt.pull-right.login-prompt
              a(class='button btn btn-primary btn-sm' href='coachSignup' role='button' style="position: absolute; left: 150px").signUp_button Sign Up
            br
        br
      h3#IndexHeader AS COACH

    div.col
    div.col-md-4.jumbotron
      div.row
        div.col-md-2
        h4.loginLabel(style="margin-left:10px") LOG IN OR &nbsp
        a(class='button btn btn-primary btn-sm' href='executiveSignup' style="margin-left:60px, margin-top:1px").signUp_button Sign Up
        div.col-md-3
        br
      div.row
        div.col-md-2
        div.col
          form(method='POST' action='/executiveView' id="loginForm")
            div.form-group
              input.input-small#username2.form-control(type='text', name='username2', placeholder="Email", style="text-align: left" required)
            div.form-group
              input.input-small#password2.form-control(type='password', name='password2', placeholder="Password", style="text-align: left" required)
            h6(style="color: red; text-align: left") #{message2}
            div.row
              div.col-md-5
              button.btn.btn-primary.btn-sm(type='submit') Sign In
              p#loginPrompt.pull-right.login-prompt
            br
      h3#IndexHeader AS EXECUTIVE
    div.col
