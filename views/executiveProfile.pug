extends layout

block content
	nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
		a.navbar-brand(href='/') Leadership as an Artform
		div.collapse.navbar-collapse#navbarColor02
			ul.navbar-nav.ml-auto
				li
					a.nav-item.nav-link(href='/executiveView') Home
				li
					a.nav-link.nav-item.active(href='#') Profile
				li
					a.nav-link.nav-item(href='/coachProfile_executive') Coach's Profile
				li
					a.nav-item.nav-link(href='/addGoal_executive') Add Goal
				li
					form(method='POST' action='/')
						input(type="hidden" name="signOut" value="signOut")
						button(style="color: red" class="btn btn-sm",type="submit").signOut_button Sign Out
	div.row
		div.col-md-1
		div.col-md-2
			img#profileImage(src='#{user.photograph}')
			br
			br
			br
		div.col-md-1
		div.col-md-6
			br
			h1 #{user.name}
			h6 #{user.username}
			p #{user.bio_info}
		div.col-md-2
			button(class="btn badge badge-info badge-pill",type="button",data-toggle="modal", data-target="#editProfileModal").client_button Edit Profile
		.modal(role="dialog", id="editProfileModal")
			.modal-dialog-centered.custom_modal_dialog(role="document")
				.modal-content
					form(id = "form" method='POST' action='/executiveProfile')
						.modal-header
							h5 Edit Profile
							button(class="close",data-dismiss="modal")
								span &times;
						.modal-body
							p First Name:
								br
								input(type="text" name="newFName")
							p Last Name:
								br
								input(type="text" name="newLName")
							p Email Address:
								br
								input(type="text" name="newEmail")
							p Short Biography
								br
								input(type="textarea" name ="newBio" size="90px")
							p Photo
								br
								input#image.form-control(type='file' name='newPhoto' accept='image/*')
						.modal-footer
							button.btn.badge.badge-pill.badge-info(type='submit') Update

		.row
	div.jumbotron
		h3 Past Goals
		div.card.text-black.bg-primary-mb-3(style='max-wdith:20rem')
			div.card-header Date Completed
			div.card-body
				h4 Goal Name
				p Description of goal
			div.progress
				div.progress-bar.bg-success(role='progressbar' style='width:100%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
		div.card.text-black.bg-primary-mb-3(style='max-wdith:20rem')
			div.card-header Date Completed
			div.card-body
				h4 Goal Name
				p Description of goal
			div.progress
				div.progress-bar.bg-success(role='progressbar' style='width:100%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
