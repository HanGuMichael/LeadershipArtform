mixin print_goal(goal)
  while goal.goal_due_date < Date.now()
    if goal.goal_frequency == 0
      - var new_date = new Date(goal.goal_due_date.getTime() + 86400000)
      - goal.goal_due_date = new_date
    else if goal.goal_frequency == 1
      - var new_date = new Date(goal.goal_due_date.getTime() + 604800000)
      - goal.goal_due_date = new_date
    else if goal.goal_frequency == 2
      - var new_date = new Date(goal.goal_due_date.getTime() + 1209600000)
      - goal.goal_due_date = new_date
    else
      - var new_date = new Date(goal.goal_due_date.getTime() + 2592000000)
      - goal.goal_due_date = new_date
  div.card.text-black.bg-primary-mb-3(style='max-wdith:20rem')
    div.card-header Due Date: #{formatDate(goal.goal_due_date)}
    div.card-body
      div.goal_info
        div.goal_data
          h4 #{goal.goal_title}
          p Description of goal
        div.form_view_goal
          form(method="POST", action="/viewGoal")
            button.btn.btn-primary.btn-small.view_goal_button(type='submit', style="margin-left:75px") View Goal
      div.progress
        div.progress-bar.bg-warning(role='progressbar' style='width:5%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
  - function formatDate(date) {
  -   var monthNames = [ "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
  -   var day = date.getDate();
  -   var month = date.getMonth();
  -   var year = date.getFullYear();
  -   return monthNames[month] + ' ' + day + ', ' + year; }
